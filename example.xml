<scene version='2.2.1'>
  <path value="."/>

  <integrator type='volpath'/>

  <sensor type="perspective">
    <float name="near_clip" value="1"/>
    <float name="far_clip" value="1000"/>

    <transform name="to_world">
      <lookat 
        target="0.0,3.0,0.0"
        origin="0.0,3.0,12.0"
        up    ="0.0,1.0,0.0"
      />
    </transform>

    <film type="hdrfilm">
      <rfilter type="mitchell"/>
      <integer name="width" value="256"/>
      <integer name="height" value="256"/>
      <string name="pixel_format" value="rgb"/>
      <!-- <string name="component_format" value="float32"/> -->
    </film>

    <sampler type="ldsampler">
      <integer name="sample_count" value="127"/>
    </sampler>
    <!-- this indicate the medium of world -->
    <medium type="homogeneous">
      <spectrum name="sigma_t" value="0.05"/>
      <spectrum name="albedo" value="0.95"/>
      <phase type="isotropic"/>
    </medium>
  </sensor>

  <!-- <shape type="sphere">
    <float name="radius" value="1"/>

    <bsdf type="diffuse">
      <rgb name="reflectance" value="0.50980395, 0.6156863 , 0.5764706"/>
    </bsdf>

    <transform name="to_world">
      <translate value="0, 1, 0"/>
    </transform>
  </shape> -->

  <shape type="obj">
    <string name="filename" value="psyduck.obj"/>
    <bsdf type="diffuse">
      <rgb name="reflectance" value="0.5,0.5,0.5"/>
    </bsdf>
    <transform name="to_world">
      <scale value="0.4,0.4,0.4"/>
    </transform>
  </shape>

  <bsdf type="diffuse" id="checkboard_material">
    <texture name="reflectance" type="checkerboard">
      <rgb name="color0" value="0.5,0.5,0.5"/>
      <rgb name="color1" value="0.6,0.6,0.6"/>
        <transform name="to_uv">
            <scale x="6" y="6" />
        </transform>
    </texture>
  </bsdf>

  <bsdf type="diffuse" id="color_material">
    <rgb name="reflectance" value="0.5,0.5,0.5"/>
  </bsdf>

  <shape type="shapegroup" id="plane_checkerboard">
    <shape type="rectangle">
      <transform name="to_world">
      <!-- [-3,-3]x[3,3] -->
        <scale value="3"/>
      </transform>
      <ref id="checkboard_material"/>
    </shape>
  </shape>

  <shape type="shapegroup" id="plane_color">
    <shape type="rectangle">
      <transform name="to_world">
      <!-- [-3,-3]x[3,3] -->
        <scale value="3"/>
      </transform>
      <ref id="color_material"/>
    </shape>
  </shape>

  <shape type="instance">
    <!-- floor -->
    <ref id="plane_color"/>
    <transform name="to_world">
      <rotate x="1" angle="-90"/>
    </transform>
  </shape>

  <shape type="instance">
    <!-- back -->
    <ref id="plane_checkerboard"/>
    <transform name="to_world">
      <translate value="0,3,-3"/>
    </transform>
  </shape>

  <shape type="instance">
    <!-- ceil -->
    <ref id="plane_color"/>
    <transform name="to_world">
      <rotate x="1" angle="90" />
      <translate value="0,6,0"/>
    </transform>
  </shape>

  <shape type="instance">
    <ref id="plane_color"/>
    <transform name="to_world">
      <rotate y="1" angle="90"/>
      <translate value="-3,3,0"/>
    </transform>
  </shape>

  <shape type="instance">
    <ref id="plane_color"/>
    <transform name="to_world">
      <rotate y="1" angle="-90"/>
      <translate value="3,3,0"/>
    </transform>
  </shape>

  <!-- <shape type="disk">
    <transform name="to_world">
      <scale value="0.5,0.5,0.5"/>
      <rotate x="1" angle="90"/>
      <translate value="0,5.99,0"/>
    </transform>
    <emitter type="area">
      <spectrum name="radiance" type="d65">
        <float name="scale" value="25"/>
      </spectrum>
    </emitter>
  </shape> -->

  <emitter type="spot">
    <spectrum name="intensity" type="d65">
      <float name="scale" value="30"/>
    </spectrum>

    <transform name="to_world">
      <lookat 
        target="0.0,0.0,0.0"
        origin="0.0,5.99,0.0"
        up="0.0,1.0,1.0"
      />
    </transform>
  </emitter>

</scene>


